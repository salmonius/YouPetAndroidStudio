<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7F2E8"
    tools:context=".PerfilActivity">

    <EditText
        android:id="@+id/edit8_perfil_provincia"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Provincia:"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edit4_perfil_poblacion"
        app:layout_constraintTop_toBottomOf="@+id/edit7_perfil_direccion" />

    <EditText
        android:id="@+id/edit7_perfil_direccion"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Direcci칩n:"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edit3_perfil_fecha"
        app:layout_constraintTop_toBottomOf="@+id/edit6_perfil_email" />

    <EditText
        android:id="@+id/edit6_perfil_email"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="E-mail:"
        android:textColor="#040404"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edit2_perfil_apellidos"
        app:layout_constraintTop_toBottomOf="@+id/edit5_perfil_telefono" />

    <EditText
        android:id="@+id/edit5_perfil_telefono"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Telefono:"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edit1_perfil_nombre"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edit4_perfil_poblacion"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Poblaci칩n:"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit3_perfil_fecha" />

    <EditText
        android:id="@+id/edit3_perfil_fecha"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Fecha de nacimiento:"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit2_perfil_apellidos" />

    <ImageButton
        android:id="@+id/ib3_perfil_editar_datos_usuario"
        android:layout_width="19dp"
        android:layout_height="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ajustes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tv1_perfil_usuario" />

    <EditText
        android:id="@+id/edit2_perfil_apellidos"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Apellidos:"
        android:textColor="#070707"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit1_perfil_nombre" />

    <ImageButton
        android:id="@+id/ib1_perfil_atras"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/flechaizquierda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv1_perfil"
        android:layout_width="182dp"
        android:layout_height="87dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/ib2_perfil_editar_foto"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/subiendo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv1_perfil"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv1_perfil_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Daniel Salm칩n Barber치"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1_perfil" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/merienda_one"
        android:text="Datos del usuario"
        android:textColor="#040404"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1_perfil_usuario" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="407dp"
        android:layout_height="17dp"
        android:text="_________________________________________________________________________________________________________________"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edit1_perfil_nombre"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#A7F2E8"
        android:ems="10"
        android:inputType="text"
        android:text="Nombre:"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ScrollView
        android:id="@+id/sv1_perfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1_perfil_guardar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv9_perfil_datos_mascotas"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_one"
                    android:text="Datos de sus mascotas"
                    android:textColor="#070707"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/ib4_perfil_editar_datos_mascota"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ajustes" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_______________________________________________________________"
                android:textColor="#050505" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv1_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib5_perfil_aniadir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A7F2E8"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv10_perfil_datos_eventos"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_one"
                    android:text="Datos de los eventos"
                    android:textColor="#070707"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/ib6_perfil_editar_datos_eventos"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ajustes" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_______________________________________________________________"
                android:textColor="#040404" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv2_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib7_perfil_aniadir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A7F2E8"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/b1_perfil_guardar"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#050505"
        android:fontFamily="@font/merienda_one"
        android:text="+guardar"
        android:textColor="#02FFC1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit4_perfil_poblacion" />

    <Button
        android:id="@+id/b2_perfil_eliminar"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FB0E0E"
        android:fontFamily="@font/merienda_one"
        android:text="Eliminar"
        android:textColor="#0D0D0D"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/b1_perfil_guardar"
        app:layout_constraintTop_toBottomOf="@+id/edit8_perfil_provincia" />

    <EditText
        android:id="@+id/edit9_perfil_imagen"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>