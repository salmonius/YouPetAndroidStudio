<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="#A7F2E8"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="101dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_iv1_mascota"
            android:layout_width="121dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/pata" />

        <EditText
            android:id="@+id/item_edit8_mascotas_imagen"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:ems="10"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/item_ib1_mascotas_subir"
            android:layout_width="74dp"
            android:layout_height="75dp"
            android:background="@drawable/subiendo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Nombre:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Tipo:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Edad:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Tama単o:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Sexo:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="多Castrado?:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/merienda_one"
            android:gravity="center"
            android:text="Sociabilidad:"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/item_b1_mascotas_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#090909"
            android:fontFamily="@font/merienda_one"
            android:text="+guardar"
            android:textColor="#02FFC1"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/item_edit1_mascotas_nombre"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Nombre"
            android:textColor="#050505" />

        <EditText
            android:id="@+id/item_edit2_mascotas_tipo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Tipo"
            android:textColor="#040404" />

        <EditText
            android:id="@+id/item_edit3_mascotas_edad"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Edad"
            android:textColor="#040404" />

        <EditText
            android:id="@+id/item_edit4_mascotas_tamano"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Tama単o"
            android:textColor="#050505" />

        <EditText
            android:id="@+id/item_edit5_mascotas_sexo"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Sexo"
            android:textColor="#070707" />

        <EditText
            android:id="@+id/item_edit6_mascotas_castrado"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="多castrado?"
            android:textColor="#090909" />

        <EditText
            android:id="@+id/item_edit7_mascotas_sociabilidad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A7F2E8"
            android:ems="10"
            android:inputType="text"
            android:text="Sociabilidad"
            android:textColor="#070707" />

        <Button
            android:id="@+id/item_b2_mascotas_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FB0E0E"
            android:fontFamily="@font/merienda_one"
            android:text="Eliminar"
            android:textColor="#050505"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>